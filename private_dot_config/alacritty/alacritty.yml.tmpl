shell:
{{- if eq .chezmoi.os "darwin" }}
program: /bin/zsh
{{- else if eq .chezmoi.osRelease.name "Gentoo" }}
  program: /bin/fish
{{- else }}
  program: /usr/bin/zsh
{{- end }}

font:
{{- if eq .chezmoi.hostname "Apples-MBP"}}
  size: 14.0
{{- else }}
  size: 10.0
{{- end }}
  
  normal:
    family: Menlo for Powerline
    style: Regular

  bold:
    family: Menlo for Powerline
    style: Bold
  
  italic:
    family: Menlo for Powerline
    style: italic

